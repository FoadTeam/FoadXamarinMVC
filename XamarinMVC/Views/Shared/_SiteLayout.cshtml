<!DOCTYPE html>

<html lang="fa">

<head>
    @using XamarinMVC.Models;
    @{
        DatabaseContext db = new DatabaseContext();
        var user = db.Users.FirstOrDefault(u => u.Mobile == User.Identity.Name);
    }
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width , initial-scale=1" />
    <title>@ViewBag.Title</title>
    @{

        string dir = null;
        switch (System.Threading.Thread.CurrentThread.CurrentUICulture.Name)
        {
            case "en-US":
                @Styles.Render("~/Content/SiteEN")
                dir = "rtl";
                break;
            case "fa-IR":
                @Styles.Render("~/Content/SiteFA")
                dir = "ltr";
                break;
            default:
                @Styles.Render("~/Content/SiteFA")
                break;
        }

    }
    
</head>
<body>
    @{

        if (dir == "ltr")
        {
            <div style="margin-top:10px;">

                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                    <div class="neon">
                        <span class="text" data-text="BigBoss">BigBoss</span>
                        <span class="gradient"></span>
                        <span class="spotlight"></span>
                    </div>
                    <h4 style="margin-right: 15%;" class="LogoDetail">@XamarinMVC.App_GlobalResources.Texts.FastFood | بیگ باس| رییس باس | BeTheBoss# </h4>
                </div>

                <div dir="@dir" class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    @Html.Partial("~/Views/Partials/_LanguagePartial.cshtml")
                    <br />
                    <div class="clearfix"></div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 hidden">
                        <form role="search" action="/Home/Filter" method="get">
                            <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8">
                                @Html.TextBox("StrSearch", "", new { @class = "form-control", @placeholder = "... " + XamarinMVC.App_GlobalResources.Texts.Search })
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <button type="submit" style="color:whitesmoke;background-color:#293955" class="btn">@XamarinMVC.App_GlobalResources.Texts.Search<span class="fa fa-search" style="margin-right:5px;"></span></button>
                            </div>
                            <div class="col-lg-offset-4 col-md-offset-4 col-sm-offset-2 col-xs-offset-2"></div>
                        </form>

                    </div>


                </div>
            </div>
        }
        else
        {
            <div style="margin-top:10px;">


                <div dir="@dir" class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    @Html.Partial("~/Views/Partials/_LanguagePartial.cshtml")
                    <br />
                    <div class="clearfix"></div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 hidden">
                        <form role="search" action="/Home/Filter" method="get">
                            <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8">
                                @Html.TextBox("StrSearch", "", new { @class = "form-control", @placeholder = "... " + XamarinMVC.App_GlobalResources.Texts.Search })
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <button type="submit" style="color:whitesmoke;background-color:#293955" class="btn"><span class="fa fa-search" style="margin-left:5px;"></span>@XamarinMVC.App_GlobalResources.Texts.Search</button>
                            </div>
                            <div class="col-lg-offset-4 col-md-offset-4 col-sm-offset-2 col-xs-offset-2"></div>
                        </form>


                    </div>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                    <div class="neon">
                        <span class="text" data-text="BigBoss">BigBoss</span>
                        <span class="gradient"></span>
                        <span class="spotlight"></span>
                    </div>
                    <h4 style="margin-left: 15%;" class="LogoDetail">@XamarinMVC.App_GlobalResources.Texts.FastFood | بیگ باس| رییس باس | BeTheBoss# </h4>
                </div>

            </div>
        }
    }

    <div class="clearfix"></div>
    <div class="topnav" style="clear: both;margin-top:10px">

        @Html.Action("Menu", "Home")
    </div>


    <div class="content">
        @RenderBody()
    </div>


    @{
        switch (System.Threading.Thread.CurrentThread.CurrentUICulture.Name)
        {
            case "en-US":
                @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval", "~/bundles/BootStrapEN")
                break;
            case "fa-IR":
                @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval", "~/bundles/BootStrapFA")
                break;
            default:
                @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval", "~/bundles/BootStrapFA")
                break;
        }
    }
    @Scripts.Render("~/bundles/SiteScript")
    @RenderSection("Scripts", required: false)
    @Scripts.Render("~/bundles/jqueryui")


</body>
</html>
