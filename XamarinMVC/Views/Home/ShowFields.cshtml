@model IEnumerable<XamarinMVC.Models.ProductField>

@{
    switch (System.Threading.Thread.CurrentThread.CurrentUICulture.Name)
    {
        case "en-US":
            <table class="table">
                <tr>
                    <th style="text-align:left">
                        @Html.Label(XamarinMVC.App_GlobalResources.Captions.Name)
                    </th>
                    <th style="text-align:left">
                        @Html.Label(XamarinMVC.App_GlobalResources.Captions.FieldValue)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Field.ENName)
                        </td>
                        <td style="font-family:Tahoma">
                            @Html.DisplayFor(modelItem => item.ENFieldValue)
                        </td>

                    </tr>
                }

            </table>

            break;
        case "fa-IR":
            <table class="table">
                <tr>
                    <th>
                        @Html.Label(XamarinMVC.App_GlobalResources.Captions.Name)
                    </th>
                    <th>
                        @Html.Label(XamarinMVC.App_GlobalResources.Captions.FieldValue)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Field.FAName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FAFieldValue)
                        </td>

                    </tr>
                }

            </table>
            break;
        default:
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Field.FAName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FAFieldValue)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Field.FAName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FAFieldValue)
                        </td>

                    </tr>
                }

            </table>
            break;
    }

}
