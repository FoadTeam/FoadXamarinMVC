<div class="clearfix"></div>

<div class="container">
    <h2>@XamarinMVC.App_GlobalResources.Texts.Menu</h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">

            @{
                int count = 0;
                foreach (var item in Model)
                {
                    count = +1;
                    <li data-target="#myCarousel" data-slide-to="@count" class="@((IsActive)?"active":"")"></li>
                }
            }
        </ol>
        <!-- to change height slider in bootstrap.min.rtl.css change carousel-inner  -->

        <div class="carousel-inner" role="listbox">
            @{
                foreach (var item in Model)
                {
                    <div class="item @((IsActive)?"active":"")">
                        <img src="~/Images/Slide/@item.Img" alt="@item.Title" class="rounded-top border border-primary" width="100%" />
                        <div class="carousel-caption">
                            <h3>@item.Title</h3>
                            <p>@item.Order</p>
                        </div>
                    </div>
                    IsActive = false;
                }
            }
        </div>
        <!-- to change side in bootstrap.min.rtl.css change carousel-control left to right  -->
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>