@model IEnumerable<XamarinMVC.Models.Field>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div style="margin-bottom:50px">
<h2 class="pull-right">@XamarinMVC.App_GlobalResources.Captions.Field</h2>
<h2 class="pull-left"> @Html.ActionLink(XamarinMVC.App_GlobalResources.Texts.New, "Create", "", new { @class = "btn btn-success" })</h2>
</div>

<div class="clearfix" style="margin-bottom:50px"></div>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ENName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FAName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ENName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FAName)
            </td>
            <td>
                @Html.ActionLink(XamarinMVC.App_GlobalResources.Texts.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink(XamarinMVC.App_GlobalResources.Texts.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
