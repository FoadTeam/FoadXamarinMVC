@model IEnumerable<XamarinMVC.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-bottom:50px">
    <h2 class="pull-right">@XamarinMVC.App_GlobalResources.Captions.Products</h2>
    <h2 class="pull-left">
        @Html.ActionLink(XamarinMVC.App_GlobalResources.Texts.New, "Create", "", new { @class = "btn btn-success" })
    </h2>
</div>
<div class="clearfix" style="margin-bottom:50px"></div>
<div style="margin-bottom:30px">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <div class="col-lg-3 col-md-4 col-sm-5 col-xs-8">
                @Html.TextBox("strsearch", "", new { @class = "form-control", placeholder = XamarinMVC.App_GlobalResources.Texts.Search + "..." })
            </div>
            <div>
                <button type="submit" class="btn btn-success">@XamarinMVC.App_GlobalResources.Texts.Search</button>
            </div>
        </div>
    }
</div>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Brand.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Group.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameFA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NotShow)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Brand.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Group.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NameEN)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NameFA)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Seen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NotShow)
    </td>
    <td>
        @Html.ActionLink(XamarinMVC.App_GlobalResources.Texts.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
        @Html.ActionLink(XamarinMVC.App_GlobalResources.Texts.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
        @Html.ActionLink(XamarinMVC.App_GlobalResources.Captions.Gallery, "Index","galleries", new { id = item.Id }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink(XamarinMVC.App_GlobalResources.Texts.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
    </td>
</tr>
    }

</table>
